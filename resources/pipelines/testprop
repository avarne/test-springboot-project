def props
def VERSION
def FIX
def RELEASE

pipeline
{
	agent
	{
		label 'JenkinsHost'
	}

	stages
	{
		stage('Build')
		{
			steps
			{
				script
				{
					props = readProperties file:'props.txt'
   					VERSION = props['version']
   					FIX = props['fix']
   					RELEASE = VERSION + "_" + FIX
					echo ${RELEASE}
				}
            }
        }
    }
}